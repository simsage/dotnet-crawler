{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "SimSage Crawler (console)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/src/Crawlers/bin/Debug/net8.0/Crawlers.dll",
      "args": [
        "/debug",
        "-crawler", "file",
        "-server", "https://<you-server.simsage.ai>/api",
        "-org", "",
        "-kb", "",
        "-sid", "",
        "-source", "1",
        "-aes", ""
      ],
      "cwd": "${workspaceFolder}",
      "console": "internalConsole",
      "stopAtEntry": false,
      "justMyCode": true
    },
    {
      "name": ".NET Core Attach",
      "type": "coreclr",
      "request": "attach"
    }
  ]
}
